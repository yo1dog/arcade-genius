{
  "compilerOptions": {
    "checkJs": true,
    "target": "es2019",
    "module": "esnext",
    "alwaysStrict": true,
    "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "allowJs": true,
    "outDir": "dist",
    "sourceMap": true
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.js"
  ]
}