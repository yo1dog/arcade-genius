{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "alwaysStrict": true,
    "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "module": "ESNext",
    "target": "ES2019",
    "lib": ["ES2020", "DOM"],
    
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "outDir": "dist",
    "sourceMap": true
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.js"
  ]
}